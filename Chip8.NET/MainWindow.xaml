<Window x:Class="Chip8.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chip8.NET" Height="427" Width="886" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="1">
            <Canvas x:Name="screen" Margin="0,0,-342,-167">
                <Rectangle Fill="Black" Height="5" Canvas.Left="142" Stroke="Black" Canvas.Top="116" Width="5"/>
                <Rectangle Fill="Black" Height="5" Canvas.Left="152" Stroke="Black" Canvas.Top="116" Width="5"/>
                <Rectangle Fill="Black" Height="5" Canvas.Left="162" Stroke="Black" Canvas.Top="116" Width="5"/>
            </Canvas>
        </Border>
        <Grid Grid.Column="1" Grid.RowSpan="2" >
            <Grid.RowDefinitions>
                <RowDefinition Height="27*"/>
                <RowDefinition Height="337*"/>
                <RowDefinition Height="34*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Memory:"/>
            <ListView x:Name="listMemory" Grid.Row="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Address"/>
                        <GridViewColumn Header="Data"/>
                    </GridView>
                </ListView.View>
                <ListViewItem Content="0x2000"/>
            </ListView>
            <Label Content="Registers:" Grid.Column="1"/>
            <ListView x:Name="listRegisters" Grid.Column="1" Grid.Row="1">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID"/>
                        <GridViewColumn Header="Value"/>
                    </GridView>
                </ListView.View>
                <ListViewItem Content="V0"/>
                <ListViewItem Content="V1"/>
                <ListViewItem Content="V2"/>
                <ListViewItem Content="V3"/>
                <ListViewItem Content="V4"/>
                <ListViewItem Content="V5"/>
                <ListViewItem Content="V6"/>
                <ListViewItem Content="V7"/>
                <ListViewItem Content="V8"/>
                <ListViewItem Content="V9"/>
                <ListViewItem Content="VA"/>
                <ListViewItem Content="VB"/>
                <ListViewItem Content="VC"/>
                <ListViewItem Content="VD"/>
                <ListViewItem Content="VE"/>
                <ListViewItem Content="VF"/>
                <ListViewItem Content="I"/>
            </ListView>
            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="buttonLoad" Content="Load Program" Click="buttonLoad_Click"/>
                <Button x:Name="buttonRun" Content="Run" Click="buttonRun_Click" Grid.Column="1"/>
                <Button x:Name="buttonStep" Content="Step" Click="buttonStep_Click" Grid.Column="2"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1" HorizontalAlignment="Center" Width="137">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="key1" Content="1"/>
            <Button x:Name="key2" Content="2" Grid.Column="1"/>
            <Button x:Name="key3" Content="3" Grid.Column="2"/>
            <Button x:Name="keyC" Content="C" Grid.Column="3"/>
            <Button x:Name="key4" Content="4" Grid.Row="1"/>
            <Button x:Name="key5" Content="5" Grid.Column="1" Grid.Row="1"/>
            <Button x:Name="key6" Content="6" Grid.Column="2" Grid.Row="1"/>
            <Button x:Name="keyD" Content="D" Grid.Column="3" Grid.Row="1"/>
            <Button x:Name="key7" Content="7" Grid.Row="2"/>
            <Button x:Name="key8" Content="8" Grid.Column="1" Grid.Row="2"/>
            <Button x:Name="key9" Content="9" Grid.Column="2" Grid.Row="2"/>
            <Button x:Name="keyE" Content="E" Grid.Column="3" Grid.Row="2"/>
            <Button x:Name="keyA" Content="A" Grid.Row="3"/>
            <Button x:Name="key0" Content="0" Grid.Column="1" Grid.Row="3"/>
            <Button x:Name="keyB" Content="B" Grid.Column="2" Grid.Row="3"/>
            <Button x:Name="keyF" Content="F" Grid.Column="3" Grid.Row="3"/>
        </Grid>
        <StackPanel HorizontalAlignment="Right" Grid.Row="1" RenderTransformOrigin="0.5,0.5" Width="170"/>

    </Grid>
</Window>
