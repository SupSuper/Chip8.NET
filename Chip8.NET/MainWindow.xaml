<Window x:Class="Chip8.NET.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chip8.NET" Height="550" Width="767" ResizeMode="CanMinimize" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="568*"/>
            <ColumnDefinition Width="193*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="256*"/>
            <RowDefinition Height="91*"/>
        </Grid.RowDefinitions>
        <Canvas x:Name="screen" Margin="0"/>
        <Grid Grid.Row="1" HorizontalAlignment="Center" Width="137">
            <Grid.RowDefinitions>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
                <RowDefinition Height="25*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="25*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="key1" Content="1"/>
            <Button x:Name="key2" Content="2" Grid.Column="1"/>
            <Button x:Name="key3" Content="3" Grid.Column="2"/>
            <Button x:Name="keyC" Content="C" Grid.Column="3"/>
            <Button x:Name="key4" Content="4" Grid.Row="1"/>
            <Button x:Name="key5" Content="5" Grid.Column="1" Grid.Row="1"/>
            <Button x:Name="key6" Content="6" Grid.Column="2" Grid.Row="1"/>
            <Button x:Name="keyD" Content="D" Grid.Column="3" Grid.Row="1"/>
            <Button x:Name="key7" Content="7" Grid.Row="2"/>
            <Button x:Name="key8" Content="8" Grid.Column="1" Grid.Row="2"/>
            <Button x:Name="key9" Content="9" Grid.Column="2" Grid.Row="2"/>
            <Button x:Name="keyE" Content="E" Grid.Column="3" Grid.Row="2"/>
            <Button x:Name="keyA" Content="A" Grid.Row="3"/>
            <Button x:Name="key0" Content="0" Grid.Column="1" Grid.Row="3"/>
            <Button x:Name="keyB" Content="B" Grid.Column="2" Grid.Row="3"/>
            <Button x:Name="keyF" Content="F" Grid.Column="3" Grid.Row="3"/>
        </Grid>
        <StackPanel Grid.Column="1" Grid.RowSpan="2">
            <Label Content="Memory:"/>
            <ListView x:Name="listMemory" Height="223">
                <ListView.View>
                    <GridView>
                        <GridViewColumn/>
                    </GridView>
                </ListView.View>
            </ListView>
            <Label Content="Registers:"/>
            <ListView x:Name="listRegisters" Height="245">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ID"/>
                        <GridViewColumn Header="Value"/>
                    </GridView>
                </ListView.View>
                <ListBoxItem Content="test"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="a"/>
                <ListBoxItem Content="I"/>
            </ListView>
        </StackPanel>

    </Grid>
</Window>
